<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_layout_gray06_purple04"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/schedule_item_img"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_coffee"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/schedule_item_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/schedule_item_img"
        app:layout_constraintTop_toTopOf="@+id/schedule_item_img"
        android:textStyle="bold"
        style="@style/Body1"
        android:textColor="@color/gray01"
        tools:text="모임" />

    <TextView
        android:id="@+id/schedule_item_txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/gray02"
        tools:text="10월 10일 목요일" />

    <TextView
        android:id="@+id/schedule_item_txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/schedule_item_txt_date"
        app:layout_constraintTop_toBottomOf="@+id/schedule_item_txt_date"
        tools:text="오후 06:30"
        android:textColor="@color/gray02"/>


</androidx.constraintlayout.widget.ConstraintLayout>