<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:orientation="vertical"
    android:background="@color/gray05"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="34dp"
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray06"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/group_drawer_txt_title"
            style="@style/Title1.bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/group_drawer_img_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="계모임 이름" />

        <ImageView
            android:id="@+id/group_drawer_img_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/group_drawer_txt1"
            style="@style/SubTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="모임장"
            android:textColor="@color/gray02"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/group_drawer_txt_title" />

        <TextView
            android:id="@+id/group_drawer_txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/group_drawer_txt1"
            app:layout_constraintStart_toEndOf="@+id/group_drawer_txt1"
            app:layout_constraintTop_toTopOf="@+id/group_drawer_txt1"
            tools:text="이아리" />

        <LinearLayout
            android:id="@+id/group_drawer_ll_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_btn_purple05"
            android:orientation="horizontal"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"

            app:layout_constraintEnd_toStartOf="@+id/group_drawer_ll_day"
            app:layout_constraintTop_toBottomOf="@+id/group_drawer_txt_title">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="멤버"
                android:textColor="@color/purple01"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/group_drawer_txt_member_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@color/purple01"
                android:textSize="13sp"
                android:textStyle="bold"
                tools:text="8" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_drawer_ll_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_btn_purple05"
            android:orientation="horizontal"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/group_drawer_ll_member"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/group_drawer_ll_member">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D+"
                android:textColor="@color/purple01"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/group_drawer_txt_day_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple01"
                android:textSize="13sp"
                android:textStyle="bold"
                tools:text="123" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        android:background="@color/gray06"
        android:padding="10dp"
        android:layout_marginBottom="3dp">
        <LinearLayout
            android:id="@+id/group_drawer_ll_setting1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_member_setting"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Title2"
                android:textColor="@color/gray02"
                android:text="멤버 관리"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/group_drawer_ll_setting2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_date"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Title2"
                android:textColor="@color/gray02"
                android:text="일정 관리"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/group_drawer_ll_setting3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_pig"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Title2"
                android:textColor="@color/gray02"
                android:text="곗돈 관리"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/group_drawer_ll_setting4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_code"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Title2"
                android:textColor="@color/gray02"
                android:text="초대 코드 생성"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:background="@drawable/bg_layout_gray04"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/gray03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모임 삭제하기"/>

</LinearLayout>