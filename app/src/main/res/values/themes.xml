<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Damoim" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/gray05</item>
    </style>

    <style name="Title1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Title1.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title2">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Title2.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title2.purple02">
        <item name="android:textColor">@color/purple02</item>
    </style>

    <style name="SubTitle1">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="SubTitle1.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Body1.white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Body2">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Body2.white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Body3">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/view_slide_top_to_down</item>
        <item name="android:windowExitAnimation">@anim/view_slide_down_to_up</item>
    </style>

    <style name="PopupWindowFadeAnimation">
        <item name="android:windowEnterAnimation">@anim/view_fade_in</item>
        <item name="android:windowExitAnimation">@anim/view_fade_out</item>
    </style>

</resources>